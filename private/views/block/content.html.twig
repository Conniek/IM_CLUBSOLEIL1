<div class="screen screen--2 deuxAlpes">
    <div class="container">
        <div class="group-title">
            <h2 class="title__primary">{{trad.screen2.groupTitle.h2}}</h2>
            <h3 class="title__secondary">{{trad.screen2.groupTitle.h3}}</h3>
            <p>{{trad.screen2.groupTitle.paraph}}</p>
        </div>
    </div>
    <div class="slider__deuxAlpes">
        {% for slide in trad.slider2Alpes %}
            <div class="slider__item block-image-style2" style="background-image: url(../img/bg2Alpes/{{ loop.index }}.jpg)">
                <img src="img/bg2Alpes/{{ loop.index }}.jpg" alt="" />
                <div class="frame-text container">
                    <strong>{{ slide.text}}</strong>
                </div>
            </div>
        {% endfor %}
    </div>
</div>

<div class="screen screen--3 notreVillage">
