            <p>{{trad.screen3.groupTitle.paraph}}</p>
        </div>

        <div class="group-bloc-image responsive">
            {% for village in trad.notreVillage %}
                <div class="block-image-style2">
                    <img src="img/village/{{ loop.index }}.jpg" alt="" />
                    <div class="frame-text">
                        <strong>{{village.text}}</strong>
                    </div>
                </div>
            {% endfor %}  
        </div>
    </div>
</div>

